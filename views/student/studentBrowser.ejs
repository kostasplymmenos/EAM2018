<script>
$(document).ready( (e) => {
    var xhttp = new XMLHttpRequest();
    xhttp.onreadystatechange = function() {
        if (this.readyState == 4 && this.status == 200) {
            var bookArray = JSON.parse(this.responseText);
            bookArray.forEach(book => {
                $('#browseResults').append('<details class="book-listing"><summary><i class="fas fa-2x fa-book">  ' + book.title + '</i><i style="float:right" class="fas fa-2x fa-caret-down"></i></summary><p>details...</p></details>')  
            });
            
        }
        
    };
    xhttp.open("GET", "/student/browse/books?", true);
    xhttp.send();
})

$('#categorySelect').on('change', (e) => {
        
        e.preventDefault()
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
                $(".book-listing" ).remove();
                var bookArray = JSON.parse(this.responseText);
                bookArray.forEach(book => {
                    $('#browseResults').append('<details class="book-listing"><summary><i class="fas fa-2x fa-book">  ' + book.title + '</i><i style="float:right" class="fas fa-2x fa-caret-down"></i></summary><p>details...</p></details>')  
                });
                
            }
        };
        params = "books"
        category = $('#categorySelect').val()
        
        console.log(category);
        
        if( category && (category != 'all'))
            params = params + "?category=" + category
            
        xhttp.open("GET", "/student/browse/" + params, true);
        xhttp.send();
    })

</script>


